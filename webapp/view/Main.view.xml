<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="sapips.training.odata.controller.Main">
    <Page id="page" title="{i18n>title}">
    <content>
        <Table noDataText="{i18n>noDataText}" 
                       id="tblProduct"
                       items="{
                                path: '/Products',
                                sorter: { path: 'ProductName', descending: false },                                
                                filters: [
                                        { path: 'Discontinued', operator: 'EQ', value1: false }
                                         ]
                              }"                        
                       inset="false">
            
            <headerToolbar>
                <Toolbar id="tb1">
                <Title id="tbTitle1" text="{i18n>tabTitle}" level="H2" />          
                </Toolbar>
            </headerToolbar>
            
            <infoToolbar>
                <Toolbar id="tb2">
                    <Text id="tbText1" text="{i18n>tabInfoText}" />
                </Toolbar>
            </infoToolbar>


            <columns>
                <Column id="column0">
                    <header>
                        <Label text="{i18n>colTextProd}" id="label0"/>
                    </header>
                </Column>
                <Column id="column1">
                    <header>
                        <Label text="{i18n>colTextSupp}" id="label1"/>
                    </header>
                </Column>
                <Column id="column2">
                    <header>
                        <Label text="{i18n>colTextPrice}" id="label2"/>
                    </header>
                </Column>
            </columns>
            <items>
                <ColumnListItem type="Active" id="item0">
                    <cells>
                        <ObjectIdentifier id="oiProduct" title="{ProductName}" text="{i18n>rowTextProd} {ProductID}" />
                        <Text text="{SupplierID}" id="text3"/>
                        <ObjectIdentifier id="oiPrice" title="{UnitPrice}" text="{QuantityPerUnit}" />
                    </cells>
                </ColumnListItem>
            </items>            
        </Table>
    </content>
    </Page>
</mvc:View>